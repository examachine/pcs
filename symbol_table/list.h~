#ifndef LIST_H
#define LIST_H

/*
** $VER: list.h 1.02 (28 Oct 1996)
**
** Header file for linked list classes
**
**
*/

class SoftNode
{
public:
    friend class SoftList;

    void Rem(); 
    void *Get();

private:
    SoftNode *Succ;
    SoftNode *Pred;
    void     *Data;
};

class SoftList
{
public:
    friend SoftNode;

    SoftList();
    ~SoftList();

    int IsEmpty();
    void Insert( SoftNode *, SoftNode *);
    void AddHead( void * );
    void AddTail( void * );
    void *RemHead();
    void *RemTail();
    void *GetHead();
    void *GetTail();

private:
    SoftNode *Head;
    SoftNode *Tail;

};

#endif
